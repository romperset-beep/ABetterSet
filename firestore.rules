rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic Rule: Deny everything by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow Access only if Authenticated (Anonymous or not)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
